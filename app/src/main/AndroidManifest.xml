<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.test.dan.myactionbar" >

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ControlPanelActivity"
            android:label="@string/main_interface"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.test.dan.myactionbar.MainActivity" />

        </activity>

        <activity
            android:name=".HistoryDataShowingActivity"
            android:label="@string/history_data_showing_title"
            android:parentActivityName=".ControlPanelActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.test.dan.myactionbar.ControlPanelActivity" />
        </activity>
    </application>

</manifest>
